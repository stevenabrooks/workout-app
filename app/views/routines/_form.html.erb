<%= form_for(@routine) do |f| %>
  <% if @routine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@routine.errors.count, "error") %> prohibited this routine from being saved:</h2>

      <ul>
      <% @routine.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <%= f.fields_for :exercises do |builder| %>
  <p>
    <%= builder.label :name, "Exercise" %><br/>
    <%= builder.text_field :name %><br />
    <%= builder.check_box :_destroy %>
    <%= builder.label :_destroy, "Remove Exercise" %>
    <% end %>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
